{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "<some-app-name>"
    },
    "spec": {
        "selector": {
            "app": "<some-app-name>"
        },
        "ports": [
            {
                "protocol": "TCP",
                "port": <port-expose-on-all-node>,
                "targetPort": <port-expose-in-container>,
                "nodePort": <port-expose-on-all-node>
            }
        ],
        "type": "NodePort"
    }
}
